{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "api/dist",
    "rootDir": "api/src"
  },
  "include": [
    "api/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "src",
    "api/test",
    "**/*.spec.ts"
  ]
}
